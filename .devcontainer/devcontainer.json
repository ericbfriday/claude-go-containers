{
  "name": "Go + Claude CLI + OpenCode AI Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.makefile-tools",
        "Anthropic.claude-code"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true,
        "go.lintOnSave": "package",
        "go.formatTool": "gofmt"
      }
    }
  },
  "features": {
    "ghcr.io/danzilberdan/devcontainers/opencode:0": {}
    // Uncomment to enable Crush AI (Charmbracelet) as an optional AI assistant
    // "./features/crush": {
    //   "version": "latest"
    // }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "go version && claude --version && opencode --version",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    {
      "source": "${localWorkspaceFolder}/.opencode/auth.json",
      "target": "/mnt/opencode-auth.json",
      "type": "bind"
    }
  ]
}